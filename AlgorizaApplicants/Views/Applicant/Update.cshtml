@model AlgorizaApplicants.DAL.DTOs.ApplicantDetailsDTO
<form method="post">
    <div class="border-3 mt-4">
        <div class="row bp-2">
            <h2 class="text-primary"> Update An Applicant </h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id"  disabled="disabled" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" minlength="5 "required="true" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="FamilyName"></label>
            <input asp-for="FamilyName" type="text" minlength="5" required="true" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" type="text" minlength="10" required="true" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="CountryOfOrigin"></label>
            <input asp-for="CountryOfOrigin" required="true" placeholder="Egypt, Berlin, Etc.." class="form-control"/>
            <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" type="email" required="true" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Age"></label>
            <input asp-for="Age" type="number" min="20" max="60" required="true" class="form-control"/>
        </div>
        <div class="mb-3 form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                Hired?
            </label>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Applicant" asp-action="Applicants" class="btn btn-secondary" style="width:150px"> Back To List </a>
    </div>
</form>
